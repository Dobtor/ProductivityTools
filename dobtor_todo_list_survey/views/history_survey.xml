<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- history survey tree -->
    <record id="view_history_survey_tree" model="ir.ui.view">
        <field name="name">view_history_survey_tree</field>
        <field name="model">dobtor.todo.list.user_input.ref</field>
        <field name="arch" type="xml">
            <tree string="histor survey" create="false">
                <field name="todo_list_ids" readonly="1"/>
                <field name="user_input_ids"  readonly="1" />
                <field name="user_input_name"  readonly="1"/>
                <button name="open_history" type="object" icon="fa-send" string="Open"/>
            </tree>
        </field>
    </record>
    <!-- action window -->
    <record id="action_view_history_survey" model="ir.actions.act_window">
        <field name="name">history_survey</field>
        <field name="res_model">dobtor.todo.list.user_input.ref</field>
        <field name="view_mode">tree</field>
    </record>
    <!-- atcion -->
    <menuitem name="History Survey" parent="dobtor_todo_list_core.menu_dobtor_todo_list_management" id="menu_history_survey" action="action_view_history_survey"/>
</odoo>
