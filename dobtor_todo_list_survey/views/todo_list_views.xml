<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- todo_list tree -->
    <record id="todo_list_survey_tree" model="ir.ui.view">
        <field name="name">todo.list.survey.tree</field>
        <field name="model">dobtor.todo.list.core</field>
        <field name="inherit_id" ref="dobtor_todo_list_core.todo_list_core_treeview"/>
        <field name="arch" type="xml">
            <xpath expr="//tree/button[@name='change_state_cancelled']" position="after">
                <field name="survey_id"/>
                <field name="response_id" invisible="True"/>
                <field name="hide_survey" invisible="True" />
                <button name="open_survey" type="object" icon="fa-edit" help="" attrs="{'invisible':['|','|',('survey_id','=',False),('response_id','!=',False),('hide_survey', '=', True)]}" string="Open"/>
                <button name="open_survey" type="object" icon="fa-send" help="" attrs="{'invisible':['|','|',('survey_id','=',False),('response_id','=',False),('hide_button', '=', True)]}" string="Open"/>
                <field name="hide_reject" invisible="True" />
                <button name="reject_action" type="object" icon="fa-reply" help="" attrs="{'invisible':['|','|',('survey_id','=',False),('response_id','=',False),('hide_reject', '=', True)]}" string="reject"/>
            </xpath>
        </field>
    </record>
    <!-- todo_list form -->
    <record id="todo_list_survey_form" model="ir.ui.view">
        <field name="name">todo.list.survey.form</field>
        <field name="model">dobtor.todo.list.core</field>
        <field name="inherit_id" ref="dobtor_todo_list_core.dobtor_todo_list_core_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet/div[@class='oe_button_box']" position="inside">
                <button name="open_survey" type="object" class="oe_stat_button" icon="fa-edit" attrs="{'invisible':[('survey_id','=',False)]}" string="Open Survey"/>
            </xpath>
            <xpath expr="//form/sheet/group/group" position="inside">
                <field name="survey_id"/>
            </xpath>
        </field>
    </record>

    <!-- todo_list survey template tree -->
    <record id="todo_list_survey_template_tree_view" model="ir.ui.view">
        <field name="name">todo.list.survey.template.tree.view</field>
        <field name="model">dobtor.todo.list.core</field>
        <field name="priority">30</field>
        <field name="arch" type="xml">
            <tree string="Task Work" editable="bottom" colors="red:recolor == True;gray:state == 'cancelled';green:state == 'done';#b818ce:state == 'waiting'">
                <button name="action_form_todo_list" string="Todo-list" type="object" icon="fa-envelope"/>
                <field name="name"/>
                <field name="recolor" invisible="True"/>
                <field name="user_id" options="{'no_open': True}"/>
                <field name="state"/>
                <field name="hide_button" invisible="True"/>
                <button name="change_state_done" string="Change state to DONE" type="object" icon="fa-check" attrs="{'invisible': ['|', ('state', 'in',['done', 'cancelled']), ('hide_button', '=', True)]}"/>
                <button name="change_state_todo" string="Change state to TODO" type="object" icon="fa-file" attrs="{'invisible': [ '|',('state', '=', 'todo'), ('hide_button', '=', True)]}"/>
                <button name="change_state_waiting" type="object" string="Change state to WAITING" icon="fa-pause" attrs="{'invisible': [ '|',('state', '=', 'waiting'), ('hide_button', '=', True)]}"/>
                <button name="change_state_cancelled" type="object" string="Change state to CANCELLED" icon="fa-ban" attrs="{'invisible': [ '|',('state', '=', 'cancelled'), ('hide_button', '=', True)]}"/>
                <field name="survey_id"/>
                <field name="response_id" invisible="True"/>
                <field name="hide_survey" invisible="True" />
                <button name="open_survey" type="object" icon="fa-edit" help="" attrs="{'invisible':['|','|',('survey_id','=',False),('response_id','!=',False),('hide_survey', '=', True)]}" string="Open"/>
                <button name="open_survey" type="object" icon="fa-send" help="" attrs="{'invisible':['|','|',('survey_id','=',False),('response_id','=',False),('hide_button', '=', True)]}" string="Open"/>
                <field name="hide_reject" invisible="True" />
                <button name="reject_action" type="object" icon="fa-reply" help="" attrs="{'invisible':['|','|',('survey_id','=',False),('response_id','=',False),('hide_reject', '=', True)]}" string="reject"/>
                <field name="reviewer_id" options="{'no_open': True}"/>
                <field name="ref_model" invisible="True" />
                <field name="parent_model" invisible="True"/>
                <field name="write_date" readonly="True"/>
                <field name="creater" options="{'no_open': True}"/>
                <field name="attachment_number" invisible="True"/>
                <button name="attachment_form_view" string="Open Attached Documents" type="object" icon="fa-upload" />
                <button name="action_get_attachment_view" string="View Attached Documents" type="object" icon="fa-paperclip" attrs="{'invisible': [('attachment_number', '=', 0)]}"/>
            </tree>
        </field>
    </record>
</odoo>