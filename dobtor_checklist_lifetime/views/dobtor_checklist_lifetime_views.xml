<odoo>
  <data>
    <record id="ir_cron_scheduler_todo_list" model="ir.cron">
      <field name="name">Lifeline scheduler</field>
      <field name="user_id" ref="base.user_root"/>
      <field name="interval_number">1</field>
      <field name="interval_type">minutes</field>
      <field name="numbercall">-1</field>
      <field eval="False" name="doall"/>
      <field ref="dobtor_checklist_core.model_dobtor_checklist_core" name="model_id"/>
      <field eval="'process_lifeline_scheduler'" name="function"/>
    </record>



    <record id="checklist_lifeline_tree_view" model="ir.ui.view">
      <field name="name">checklist.lifeline.tree</field>
      <field name="model">dobtor.checklist.core</field>
      <field name="inherit_id" ref="dobtor_checklist_core.check_list_core_treeview"/>
      <field name="arch" type="xml">
        <xpath expr="//button[@name='action_get_attachment_view']" position="after">
          <field name="lifeline" widget="progressbar" attrs="{'invisible':[('id','=',False)]}" class="oe_read_only"/>
        </xpath>
      </field>
    </record>

    <record id="checklist_lifeline_form_view" model="ir.ui.view">
      <field name="name">checklist.lifeline.form</field>
      <field name="model">dobtor.checklist.core</field>
      <field name="inherit_id" ref="dobtor_checklist_core.dobtor_checklist_core_form"/>
      <field name="arch" type="xml">
        <xpath expr="//form/sheet/div[@class='oe_button_box']" position="inside">
          <button name="create_timesheet" type="object" class="oe_stat_button" icon="fa-briefcase" string="Log Work"/>
        </xpath>
        <xpath expr="//field[@name='planned_hours']" position="after">
          <field name="lifeline" widget="progressbar"/>
        </xpath>
      </field>
    </record>

  </data>
</odoo>
