<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_todolist_survey_configuration" model="ir.ui.view">
        <field name="name">Configure.TodoList.Survey.view</field>
        <field name="model">dobtor_todolist_core.config.settings</field>
        <field name="inherit_id" eval="False"/>
        <field name="arch" type="xml">
            <form class="oe_form_configuration">
                <header>
                    <button string="Apply" type="object" name="execute" class="oe_highlight"/>
                    <button string="Cancel" type="object" name="cancel" class="oe_link"/>
                </header>
                <group string="Survey">
                    <field name="module_dobtor_todolist_survey" widget="radio"/>
                </group>
            </form>
        </field>
    </record>
    <record id="action_todo_survey_configuration" model="ir.actions.act_window">
        <field name="name">Configure.TodoList.Survey.action</field>
        <field name="res_model">dobtor_todolist_core.config.settings</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
    </record>
    <menuitem id="menu_todolist_global_settings" name="Configuration" parent="dobtor_todolist_core.menu_dobtor_todolist_management" sequence="20" />
    <menuitem id="menu_survey_global_settings" name="Settings" parent="dobtor_todolist_core.menu_todolist_global_settings" sequence="0" action="action_todo_survey_configuration"/>
</odoo>
