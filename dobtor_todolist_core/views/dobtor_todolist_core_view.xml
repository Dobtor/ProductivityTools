<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- TODO: [FIX] project task and crm_lead nead diffence filter -->
        <record id="dobtor_todolist_view_search" model="ir.ui.view">
            <field name="name">dobtor.todolist.core.filter</field>
            <field name="model">dobtor.todolist.core</field>
            <field name="arch" type="xml">
                <search string="Filter">
                    <field name="name" string="Description"/>
                    <filter string="TODO" domain="[('state','=','todo')]" name="done_todolist"/>
                    <group expand="0" string="Group By">
                        <filter string="Type" domain="[]" context="{'group_by':'parent_model'}" name="ggg"/>
                        <filter string="Todo" domain="[]" context="{'group_by':'ref_model'}"/>
                        <filter string="User" domain="[]" context="{'group_by':'user_id'}"/>
                        <filter string="State" domain="[]" context="{'group_by':'state'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- todo list core form -->
        <record model="ir.ui.view" id="dobtor_todolist_core_form">
            <field name="name">dobtor.todolist.core.form</field>
            <field name="model">dobtor.todolist.core</field>
            <field name="arch" type="xml">
                <form string="Todolist Message">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_get_attachment_view" class="oe_stat_button" icon="fa-book" type="object">
                                <field name="attachment_number" widget="statinfo" string="Documents"/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1 class="o_row">
                                <field name="name" placeholder="Todo List..."/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name='creater' readonly="True"/>
                                <field name="user_id"/>
                                <field name="state" string="Status"/>
                                <field name="reviewer_id" options="{'no_open': True}"/>
                                <field name="ref_model" widget='reference' string="Mission"/>
                                <field name="parent_model" onchange="0" readonly="True"/>
                            </group>
                            <group string="Time and Date">
                                <field name="date_assign"/>
                                <field name="date_deadline"/>
                                <field name="date_complete"/>
                                <field name="planned_hours" widget="float_time"/>
                            </group>
                        </group>

                        <notebook>
                            <page name="description_page" string="Description">
                            <field name="description"/>
                            <div class="oe_clear"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- todo list tree view -->
        <record model="ir.ui.view" id="todo_list_core_treeview">
            <field name="name">dobtor.todolist.core.tree</field>
            <field name="model">dobtor.todolist.core</field>
            <field name="arch" type="xml">
                <tree string="todo_list_tree" colors="red:out_of_deadline==True;blue:planned_hours==0">
                    <field name="sequence" widget="handle"/>
                    <field name="id" invisible="True"/>
                    <field name="name"/>
                    <field name="user_id" options="{'no_open': True}"/>
                    <field name="date_deadline"/>
                    <field name="out_of_deadline" invisible="True"/>
                    <field name="planned_hours" invisible="True"/>
                    <field name="state" attrs="{'invisible':[('id', '=', False)]}" readonly="True"/>
                    <field name="hide_button" invisible="True"/>
                    <button name="change_state_done" string="Change state to DONE" type="object" icon="fa fa-check" attrs="{'invisible': [ '|', '|', ('state', 'in',['done', 'cancelled']), ('hide_button', '=', True), ('id', '=', False)]}"/>
                    <button name="change_state_todo" string="Change state to TODO" type="object" icon="fa fa-file" attrs="{'invisible': [ '|', '|',('state', '=', 'todo'), ('hide_button', '=', True), ('id', '=', False)]}"/>
                    <button name="change_state_waiting" type="object" string="Change state to WAITING" icon="fa fa-pause" attrs="{'invisible': [ '|', '|',('state', '=', 'waiting'), ('hide_button', '=', True), ('id', '=', False)]}"/>
                    <button name="change_state_cancelled" type="object" string="Change state to CANCELLED" icon="fa fa-ban" attrs="{'invisible': [ '|', '|',('state', '=', 'cancelled'), ('hide_button', '=', True), ('id', '=', False)]}"/>
                    <field name="reviewer_id"/>
                    <field name="ref_model_name"/>
                    <field name="ref_parent_model_name"/>
                    <field name="attachment_number" invisible="True"/>
                    <button name="action_get_attachment_view" string="View Attached Documents" type="object" icon="fa-paperclip" attrs="{'invisible': [('attachment_number', '=', 0)]}"/>
                </tree>
            </field>
        </record>

        <!-- menu action -->
        <record id="action_view_todolist" model="ir.actions.act_window">
            <field name="name">TodoList</field>
            <field name="res_model">dobtor.todolist.core</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_done_todolist': 1}</field>
        </record>

        <!-- top menu -->
        <menuitem name="Todo List" id="menu_dobtor_todolist_management"/>

        <!-- left side menu -->
        <menuitem name="Todo List" parent="dobtor_todolist_core.menu_dobtor_todolist_management" id="menu_dobtor_todolist_subItem" action="action_view_todolist"/>

    </data>
</odoo>
