<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.module.category" id="module_category_todo_list">
        <field name="name">Todo Settings</field>
        <field name="sequence">10</field>
        <field name="visible" eval="1" />
    </record>
    <record id="group_todo_users" model="res.groups">
        <field name="name">User: Related Todo Only</field>
        <field name="category_id" ref="module_category_todo_list"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        <field name="comment">the user will have access to his own data in the todo list application.</field>
    </record>


    <record id="group_todo_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="comment">the user will have an access to the todo configuration as well as statistic reports.</field>
        <field name="category_id" ref="module_category_todo_list"/>
        <field name="implied_ids" eval="[(4, ref('group_todo_users'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>

    <record id="todo_list_user" model="ir.rule">
        <field name="name">todo list user</field>
        <field ref="model_dobtor_todo_list_core" name="model_id"/>
        <field name="domain_force">
            [ '|','|','|','|', ('user_id','=',user.id), ('user_id','=',False),
            ('creater', '=',user.id), ('reviewer_id','=',user.id),
            ('message_partner_ids', 'in', [user.partner_id.id])]
        </field>
        <field name="groups" eval="[(4, ref('dobtor_todo_list_core.group_todo_users'))]"/>
    </record>

    <record id="todo_list_manager" model="ir.rule">
        <field name="name">todo list manager</field>
        <field ref="model_dobtor_todo_list_core" name="model_id"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4, ref('dobtor_todo_list_core.group_todo_manager'))]"/>
    </record>

    <data noupdate="1">
        <record id="base.default_user" model="res.users">
            <field name="groups_id" eval="[(4,ref('dobtor_todo_list_core.group_todo_manager'))]"/>
        </record>
    </data>
</odoo>
