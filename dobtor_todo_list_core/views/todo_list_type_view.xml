<odoo>
    <record id="todo_type_search" model="ir.ui.view">
        <field name="name">todo.list.type.search</field>
        <field name="model">todo.list.type</field>
        <field name="arch" type="xml">
            <search string="Todo list Stages">
                <field name="name" string="Todo Stages"/>
            </search>
        </field>
    </record>

    <record id="todo_type_edit" model="ir.ui.view">
        <field name="name">todo.list.type.form</field>
        <field name="model">todo.list.type</field>
        <field name="arch" type="xml">
            <form string="Todo Stage">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="fold"/>
                            <field name="todo_ids" widget="many2many_tags" groups="base.group_no_one"/>
                            <field name="sequence" groups="base.group_no_one"/>
                        </group>
                    </group>
                    <group string="Stage Description and Tooltips">
                        <field name="description" placeholder="Add a description..." nolabel="1" colspan="2"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="todo_type_tree" model="ir.ui.view">
        <field name="name">todo.list.type.tree</field>
        <field name="model">todo.list.type</field>
        <field name="arch" type="xml">
            <tree string="Todo Stage">
                <field name="sequence" widget="handle" groups="base.group_no_one"/>
                <field name="name"/>
                <field name="fold"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <record id="view_todo_todo_type_kanban" model="ir.ui.view">
        <field name="name">todo.list.type.kanban</field>
        <field name="model">todo.list.type</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <field name="fold"/>
                <field name="description"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="row">
                                <div class="col-12">
                                    <strong>
                                        <t t-esc="record.name.value"/>
                                    </strong>
                                </div>
                            </div>
                            <t t-if="record.description.value">
                                <hr class="mt8 mb8"/>
                                <t t-esc="record.description.value"/>
                            </t>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="open_todo_list_type_form" model="ir.actions.act_window">
        <field name="name">Stages</field>
        <field name="res_model">todo.list.type</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="view_id" ref="todo_type_tree"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new stage in the Todo pipeline
            </p>
            <p>
                Define the steps that will be used in the todo.list from the
                creation of the Todo, up to the closing of the Todo or issue.
                You will use these stages in order to track the progress in
                solving a Todo.
            </p>
        </field>
    </record>

    <menuitem action="open_todo_list_type_form" id="menu_todo_config_stages" name="Stages" parent="dobtor_todo_list_core.menu_todo_list_global_settings" sequence="3" groups="base.group_no_one"/>

    <!-- Tags -->
    <record model="ir.ui.view" id="todo_tags_search_view">
        <field name="name">Tags</field>
        <field name="model">todo.list.tags</field>
        <field name="arch" type="xml">
            <search string="Issue Version">
                <field name="name"/>
            </search>
        </field>
    </record>
    <record model="ir.ui.view" id="todo_tags_form_view">
        <field name="name">Tags</field>
        <field name="model">todo.list.tags</field>
        <field name="arch" type="xml">
            <form string="Tags">
                <group>
                    <field name="name"/>
                </group>
            </form>
        </field>
    </record>
    <record id="todo_tags_action" model="ir.actions.act_window">
        <field name="name">Tags</field>
        <field name="res_model">todo.list.tags</field>
        <field name="view_type">form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new tag
            </p>
        </field>
    </record>

    <menuitem action="todo_tags_action" id="menu_todo_config_tags" name="Tags" parent="dobtor_todo_list_core.menu_todo_list_global_settings" sequence="4"/>

</odoo> 