<?xml version="1.0" ?>
<odoo>
    <data>

        <record id="project_resource_plan_wizards" model="ir.ui.view">
            <field name="name">project_resource_plan_wizards</field>
            <field name="model">project.task.resource.plan</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <h1 class="o_row">
                                <field name="name" placeholder="Todo List..."/>
                            </h1>
                        </div>
                        <group>
                            <group string="Resource">
                                <field name="task_id" invisible="1"/>
                                <field name="user_ids" widget="many2many_tags"/>
                                <field name="reviewer_id" options="{'no_open': True}"/>
                                <field name="planned_people"/>
                            </group>
                            <group string="Time and Date">
                                <field name="date_assign"/>
                                <field name="date_deadline"/>
                                <field name="planned_hours" widget="float_time"/>
                            </group>
                        </group>

                        <notebook>
                            <page name="description_page" string="Description">
                                <field name="description"/>
                                <div class="oe_clear"/>
                            </page>
                        </notebook>
                    </sheet>
                    <footer>
                        <button name="action_create_plan" string="Save" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>

            </field>
        </record>

    </data>
</odoo>
