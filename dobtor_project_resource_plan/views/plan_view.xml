<odoo>
    <data>
        <record model="ir.ui.view" id="resource_plan_form">
            <field name="name">resource.plan.form</field>
            <field name="model">resource.plan</field>
            <field name="arch" type="xml">
                <form string="Todo list Message">
                    <header>
                        <field name="state" widget="statusbar" statusbar_visible="unavailable,achieve"/>
                        <field name="limit" invisible="1"/>
                        <button name="apply_todo_request" string="Apply todo" attrs="{'invisible': [('limit','=',True)]}" type="object"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_get_attachment_view" class="oe_stat_button" icon="fa-book" type="object">
                                <field name="attachment_number" widget="statinfo" string="Documents"/>
                            </button>
                            <button name="action_get_requests_view" class="oe_stat_button" icon="fa-file-o" type="object">
                                <field name="request_number" widget="statinfo" string="Requests"/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1 class="o_row">
                                <field name="name" placeholder="Todo List..."/>
                            </h1>
                        </div>
                        <group>
                            <group string="Human Resources">
                                <field name='creater' readonly="True"/>
                                <field name="user_ids" widget="many2many_tags" attrs="{'invisible': [('limit','=',False)]}"/>
                                <field name="reviewer_id" options="{'no_open': True}"/>
                                <field name="ref_model" widget='reference' string="Mission"/>
                                <field name="parent_model" onchange="0" readonly="True"/>
                            </group>
                            <group string="Time and Date">
                                <field name="date_assign"/>
                                <field name="date_deadline"/>
                                <field name="date_complete"/>
                                <field name="planned_hours" widget="float_time"/>
                                <field name="planned_people_str" string="Manpower"/>
                            </group>
                        </group>

                        <notebook>
                            <page name="description_page" string="Description">
                                <field name="description"/>
                                <div class="oe_clear"/>
                            </page>
                            <page string="Applicant">
                                <field name="todo_ids" widget="many2many" options="{'no_create': True}"/>/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="resource_plan_treeview">
            <field name="name">resource.plan.tree</field>
            <field name="model">resource.plan</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" string="Name"/>
                    <field name="planned_people_str"/>
                    <field name="ref_model" string="Task"/>
                    <field name="parent_model" string="Project"/>
                    <field name="reviewer_id"/>
                    <field name="date_deadline"/>
                    <field name="planned_hours"/>
                    <field name="limit" invisible="1"/>
                    <button name="apply_todo_request" string="Apply todo" attrs="{'invisible': [('limit','=',True)]}" type="object"/>
                </tree>
            </field>
        </record>

        <record id="action_unassigned_todo_list" model="ir.actions.act_window">
            <field name="name">Unassigned Todo</field>
            <field name="res_model">resource.plan</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('limit','=',False)]</field>
        </record>

        <menuitem name="Unassigned todo" parent="dobtor_todo_list_core.menu_dobtor_todo_list_management" id="menu_unassigned_todo_list" action="action_unassigned_todo_list"/>

    </data>
</odoo>