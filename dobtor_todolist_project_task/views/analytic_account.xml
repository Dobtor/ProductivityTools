<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="analytic_account_project_template_form" model="ir.ui.view">
            <field name="name">account.analytic.account.form.project_template</field>
            <field name="model">account.analytic.account</field>
            <field name="inherit_id" ref="project.analytic_account_inherited_form"/>
            <field name="arch" type="xml">
                <xpath expr='//div[@name="project"]/label[@for="use_tasks"]' position='after'>
                    <field name="using_template" invisible="1"/>
                    <field name="picked_template" class="oe_inline" groups="base.group_no_one" attrs="{'invisible': ['|',('use_tasks', '=', False),('using_template', '=', True)]}" />
                </xpath>
            </field>
        </record>
    </data>
</odoo>
