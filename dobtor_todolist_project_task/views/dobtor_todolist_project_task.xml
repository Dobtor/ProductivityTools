<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>
    <record id="view_task_form2" model="ir.ui.view">
        <field name="name">dobtor.todolist.project.task.form</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@class='oe_title']/h1" position='after'>
                <div name="options_active" class="oe_edit_only">
                    <div>
                        <field name="lock_stage" class="oe_inline" string="Lock Stage"/>
                        <label for="lock_stage" class="oe_inline"/>
                    </div>
                </div>
            </xpath>
            <xpath expr="//page[1]" position="before">
                <page string="TodoList">
                    <field name="default_user" invisible='True'/>
                    <field name="todolist_ids" context="{'default_user_id': default_user,'default_ref_model' : 'project.task,' + str(active_id)}">
                        <tree string="Task Work" editable="bottom" colors="red:recolor == True;gray:state == 'cancelled';green:state == 'done';#b818ce:state == 'waiting'">
                            <field name="name"/>
                            <field name="recolor" invisible="True"/>
                            <field name="user_id"/>
                            <field name="state"/>
                            <field name="hide_button" invisible="True"/>
                            <button name="change_state_done" string="Change state to DONE" type="object" icon="gtk-apply" attrs="{'invisible': ['|', ('state', 'in',['done', 'cancelled']), ('hide_button', '=', True)]}"/>
                            <button name="change_state_todo" string="Change state to TODO" type="object" icon="gtk-new" attrs="{'invisible': [ '|',('state', '=', 'todo'), ('hide_button', '=', True)]}"/>
                            <button name="change_state_waiting" type="object" string="Change state to WAITING" icon="gtk-media-pause" attrs="{'invisible': [ '|',('state', '=', 'waiting'), ('hide_button', '=', True)]}"/>
                            <button name="change_state_cancelled" type="object" string="Change state to CANCELLED" icon="gtk-cancel" attrs="{'invisible': [ '|',('state', '=', 'cancelled'), ('hide_button', '=', True)]}"/>                           
                            <field name="survey_id"/>
                            <button name="open_survey"
                                class="oe_stat_button"
                                type="object"
                                help=""
                                attrs="{'invisible':[('survey_id','=',False)]}"
                                string="Open"/>
                            <field name="reviewer_id"/>
                            <field name="ref_model" invisible="True" />
                            <field name="parent_model" invisible="True"/>
                            <field name="write_date" readonly="True"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

    <record id="view_task_kanban_todolist" model="ir.ui.view">
        <field name="name">dobtor.todolist.project.task.kanban.list</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_kanban"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='tag_ids']" position="after">
                <field name="todolist_ids"/>
                <field name="kanban_todolists"/>
            </xpath>
            <xpath expr="//div[@class = 'oe_kanban_content']" postion="inside">
                <div>
                    <t t-raw="record.kanban_todolists.raw_value"/>
                </div>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="dobtor_todolist_task_form">
        <field name="name">dobtor.todolist.form</field>
        <field name="model">dobtor.todolist.core</field>
        <field name="arch" type="xml">
            <form string="Todolist Message">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="open_survey" type="object" class="oe_stat_button" icon="fa-edit" attrs="{'invisible':[('survey_id','=',False)]}" string="Open Survey"/>
                    </div>
                    <div class="oe_title">
                        <h1 class="o_row">
                            <field name="name" placeholder="Todo List..."/>
                        </h1>
                    </div>
                        <group>
                            <group>
                                <field name="user_id"/>
                                <field name="state" string="Status"/>
                                <field name="reviewer_id" invisible='False'/>
                                <field name="ref_model" string="Mission"/>
                                <field name="parent_model" onchange="0" readonly="True"/>
                                <field name="survey_id"/>                               
                            </group>
                            <group string="Time and Date">
                                <field name="date_assign"/>
                                <field name="date_deadline"/>
                                <field name="date_complete"/>
                                <field name="planned_hours" widget="float_time"/>
                            </group>
                        </group>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record id="project_task_todolist_view_search" model="ir.ui.view">
        <field name="name">dobtor.todolist.task.filter</field>
        <field name="model">dobtor.todolist.core</field>
        <field name="arch" type="xml">
            <search string="Filter">
                <field name="name" string="Description"/>
                <filter string="My" domain="[('user_id', '=', uid)]" name="my_todolist"/>
                <separator/>
                <filter string="TODO" domain="[('state','=','todo')]" name="done_todolist"/>
                <group expand="0" string="Group By">
                    <filter string="Type" domain="[]" context="{'group_by':'parent_model'}"/>
                    <filter string="Todo" domain="[]" context="{'group_by':'ref_model'}"/>
                    <filter string="User" domain="[]" context="{'group_by':'user_id'}"/>
                    <filter string="State" domain="[]" context="{'group_by':'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <record model="ir.ui.view" id="todo_list_view">
        <field name="name">dobtor.todolist.tree</field>
        <field name="model">dobtor.todolist.core</field>
        <field name="arch" type="xml">
            <tree string="todo_list_tree" colors="red:out_of_deadline==True;blue:planned_hours==0">
                <field name="sequence" widget="handle"/>
                <field name="id" invisible="True"/>
                <field name="name"/>
                <field name="user_id" options="{'no_open': True}"/>
                <field name="date_deadline"/>
                <field name="out_of_deadline" invisible="True"/>
                <field name="planned_hours" invisible="True"/>
                <field name="state" attrs="{'invisible':[('id', '=', False)]}" readonly="True"/>
                <field name="hide_button" invisible="True"/>
                <button name="change_state_done" string="Change state to DONE" type="object" icon="gtk-apply" attrs="{'invisible': [ '|', '|', ('state', 'in',['done', 'cancelled']), ('hide_button', '=', True), ('id', '=', False)]}"/>
                <button name="change_state_todo" string="Change state to TODO" type="object" icon="gtk-new" attrs="{'invisible': [ '|', '|',('state', '=', 'todo'), ('hide_button', '=', True), ('id', '=', False)]}"/>
                <button name="change_state_waiting" type="object" string="Change state to WAITING" icon="gtk-media-pause" attrs="{'invisible': [ '|', '|',('state', '=', 'waiting'), ('hide_button', '=', True), ('id', '=', False)]}"/>
                <button name="change_state_cancelled" type="object" string="Change state to CANCELLED" icon="gtk-cancel" attrs="{'invisible': [ '|', '|',('state', '=', 'cancelled'), ('hide_button', '=', True), ('id', '=', False)]}"/>                           
                <field name="survey_id"/>
                <button name="open_survey"
                    type="object"
                    icon="gtk-edit"
                    help=""
                    attrs="{'invisible':[('survey_id','=',False)]}"
                    string="Open"/>
                <field name="reviewer_id"/>
                <field name="ref_model"/>
                <field name="parent_model" onchange="0" readonly="True"/>
            </tree>
        </field>
    </record>

    <record id="action_view_todolist" model="ir.actions.act_window">
        <field name="name">TodoList</field>
        <field name="res_model">dobtor.todolist.core</field>
        <field name="view_mode">tree,form</field>
        <field name="context"> {
            'search_default_my_todolist':1,
            'search_default_done_todolist':1,
            }
        </field>
    </record>

    <menuitem name="TodoList"
              parent="project.menu_project_management"
              id="menu_action_view_todolist"
              action="action_view_todolist"/>

  </data>
</openerp>